<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdd"
    tools:context=".activity.RegisterActivity">
 <ImageView
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:layout_marginTop="@dimen/dp_128"
     android:src="@drawable/logo_hdpi"
     android:layout_width="@dimen/dp_64"
     android:layout_height="@dimen/dp_64" />
    <EditText
        android:id="@+id/register_name"
        android:drawableLeft="@drawable/login_icon_phone_n_hdpi"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_230"
        android:background="@null"
        android:hint="昵称"
        />

    <View
        android:background="#ddd"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        />
    <EditText
        android:id="@+id/register_phone"
        android:drawableLeft="@drawable/login_icon_lock_n_hdpi"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        android:layout_marginTop="@dimen/dp_33"
        android:background="@null"
        android:hint="手机号"
        />

    <View
        android:background="#ddd"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        />
    <EditText
        android:id="@+id/register_pass"
        android:drawableLeft="@drawable/login_icon_lock_n_hdpi"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_phone"
        android:layout_marginTop="@dimen/dp_33"
        android:background="@null"
        android:hint="密码"
        />

    <View
        android:background="#ddd"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_phone"
        />

    <Button
        android:id="@+id/but_re"
        android:drawablePadding="@dimen/dp_10"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_96"
        android:text="登录"
        />
</android.support.constraint.ConstraintLayout>